@model CCIA2.Models.ViewModels.StudentChoseCourseListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/Scripts/jquery.bpopup.min.js"></script>
</head>
<body>
    <div>
        <div class="member_bg form-horizontal">
            <div class="container">
                <div class="col-md-3">
                    <label>@Html.DisplayNameFor(model => model.student.mrNumber) : </label>
                    @Html.DisplayFor(model => model.student.mrNumber)
                </div>
                <div class="col-md-3">
                    <label>@Html.DisplayNameFor(model => model.student.mrName) : </label>
                    @Html.DisplayFor(model => model.student.mrName)
                </div>
                <div class="col-md-3">
                    <label>@Html.DisplayNameFor(model => model.student.memberType) : </label>
                    @Html.DisplayFor(model => model.student.memberType.membertypename)
                </div>
            </div>
            <br />
            <h3>課程清單</h3>
            <div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().course.courseClass)</th>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().course.topic)</th>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().course.day)</th>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().course.hour)</th>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().course.teachers)</th>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().course.title)</th>
                            <th>@Html.DisplayNameFor(model => model.courseList.FirstOrDefault().IsAttend)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.courseList != null)
                        {
                            foreach (var course in Model.courseList)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x => course.course.courseClass.name)</td>
                                    <td>@Html.DisplayFor(x => course.course.topic)</td>
                                    <td>
                                        @Html.DisplayFor(x => course.course.day)
                                        @Html.DisplayFor(x => course.course.startTime) ~ @Html.DisplayFor(x => course.course.endTime)
                                    </td>
                                    <td>@Html.DisplayFor(x => course.course.hour)</td>
                                    <td>
                                        @if (course.course != null && course.course.teachers != null)
                                        {
                                            foreach (var teacher in course.course.teachers)
                                            {
                                                @Html.DisplayFor(x => teacher.teacher.name)<br />
                                            }
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(x => course.course.title)</td>
                                    <td>@Html.DisplayFor(x => course.IsAttendString)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
