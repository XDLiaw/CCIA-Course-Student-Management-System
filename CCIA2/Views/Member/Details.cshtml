            其他：@Html.DisplayFor(model => model.mrOtLanguageLevel)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.mrRole, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.Raw(Int32.Parse(Model.mrRole) == 1 ? "社會人士" : "學生")
        </div>
    </div>
    @if (Int32.Parse(Model.mrRole) == 1) //社會人士
    {
        <div class="row">
            @Html.LabelFor(model => model.mrSocialEdu, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.mrSocialEdu)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.mrSocialComp, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.mrSocialComp)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.mrSocialTitle, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.mrSocialTitle)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.mrCateType, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.Raw(Model.mrCateType == "1" ? "文創產業 - " : Model.mrOtherCategory)
                @if (Model.mrCateType == "1")
                {
                    @Html.Raw(Model.mrCultureSqno == 16 ? Model.mrCultureOther : Model.culture.CultureName)
                }
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.MemberSupport, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @if (Model.MemberSupport != null && Model.MemberSupport.Count > 0)
                {
                    foreach (var support in Model.MemberSupport)
                    {
                        <div class="row">
                            <div class="col-sm-4">@Html.DisplayFor(x => support.plan.PlanName)</div>
                            @Html.LabelFor(x => support.SupportName, htmlAttributes: new { @class = "text-right col-sm-2" })
                            <div class="col-sm-3">@Html.DisplayFor(x => support.SupportName)</div>
                            @Html.LabelFor(x => support.SupportYear, htmlAttributes: new { @class = "text-right col-sm-2" })
                            <div class="col-sm-1">@Html.DisplayFor(x => support.SupportYear)</div>
                        </div>
                    }
                }
            </div>
        </div>
    }
    else //學生
    {
        <div class="row">
            @Html.LabelFor(model => model.mrStuSchool, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.mrStuSchool)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.mrStuDept, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.mrStuDept)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.mrStuYear, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.mrStuYear)
            </div>
        </div>
    }
    <div class="row">
        @Html.LabelFor(model => model.mrPro, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.mrPro)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.mrSkill, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
