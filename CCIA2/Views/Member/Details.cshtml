    </div>
    <div class="row">
        @Html.LabelFor(model => model.mrFuture, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.mrFuture)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.mrOther, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.DisplayFor(model => model.mrOther)
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.mrIsOpen, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.Raw(Model.mrIsOpen == "Y" ? "是" : "否")
        </div>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.MemberAttchFile, htmlAttributes: new { @class = "text-right col-sm-3 control-label" })
        <div class="col-sm-9">
            @if (Model.MemberAttchFile != null && Model.MemberAttchFile.Count > 0)
            {
                <div class="row">
                    @foreach (var attachFile in Model.MemberAttchFile)
                    {
                        <div class="col-sm-4">
                            @Html.ActionLink(attachFile.mrAttchFileName, "DownloadMemberAttchFile", new { sqno = attachFile.sqno }, new { target = "_blank" })
                        </div>
                    }
                </div>
            }
        </div>
    </div>
