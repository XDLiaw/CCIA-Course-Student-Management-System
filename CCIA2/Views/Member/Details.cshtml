@model CCIA2.Models.Member

<div class="member_bg container">
    <h3>個階段審核紀錄</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.LabelFor(model => model.MemberGroupResult.FirstOrDefault().AppraiseStep)</th>
                <th>@Html.LabelFor(model => model.MemberGroupResult.FirstOrDefault().AppraiseResult)</th>
                <th>@Html.LabelFor(model => model.MemberGroupResult.FirstOrDefault().AppraiseGroup)</th>
                <th>@Html.LabelFor(model => model.MemberGroupResult.FirstOrDefault().AppraiseDesc)</th>
                <th>@Html.LabelFor(model => model.MemberGroupResult.FirstOrDefault().AppraiseNo)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.MemberGroupResult != null)
            {
                foreach (var item in Model.MemberGroupResult)
                {
                    <tr>
                        <td>@item.currentStateString()</td>
                        <td>@item.appraiseResultString()</td>
                        <td>@Html.DisplayFor(modeItem => item.AppraiseGroup)</td>
                        <td>@Html.DisplayFor(modeItem => item.AppraiseDesc)</td>
                        <td>@Html.DisplayFor(modeItem => item.AppraiseNo)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<br />
