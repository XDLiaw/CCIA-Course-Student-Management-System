    </div>
    <div class="row">
        <label class="text-right col-sm-3 control-label">語言能力</label>
        <div class="col-sm-1">
            中：@Html.DisplayFor(model => model.mrChineseLevel)
        </div>
        <div class="col-sm-1">
            英：@Html.DisplayFor(model => model.mrEnglishLevel)
        </div>
        <div class="col-sm-1">
            日：@Html.DisplayFor(model => model.mrJPLevel)
        </div>
        <div class="col-sm-1">
            台：@Html.DisplayFor(model => model.mrTaiwanLevel)
        </div>
        <div class="col-sm-1">
            客：@Html.DisplayFor(model => model.mrHakkaLevel)
        </div>
